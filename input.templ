package components

templ (i Input) Show() {
	switch  {
		case i.FormControl:
			@i.asForm()
		case i.Label != "":
			@i.withTextLabel()
		case i.Icon != nil:
			@i.withIconLabel()
		default:
			@i.show("w-full max-w-xs")
	}
}

templ (i Input) show(classes ...string) {
	<input
		if i.ID() != "" {
			id={ i.ID() }
		}
		if i.Name != "" {
			name={ i.Name }
		}
		type={ i.Type.String() }
		if i.Placeholder != "" {
			placeholder={ i.Placeholder }
		}
		class={ "input", classes }
		if i.Value() != "" {
			value={ i.Value() }
		}
		{ i.Attributes()... }
	/>
}

templ (i Input) withTextLabel() {
	<label class={ "input", "flex items-center gap-2" }>
		{ i.Label }
		@i.show("grow")
		{ children... }
	</label>
}

templ (i Input) withIconLabel() {
	<label class={ "input", "flex items-center gap-2" }>
		switch i.IconAlignment {
			case AlignLeft:
				@i.Icon
				@i.show("grow")
			case AlignRight:
				@i.show("grow")
				@i.Icon
		}
		{ children... }
	</label>
}

templ (i Input) asForm() {
	<div
		id={ i.ID() }
		hx-target="this"
		hx-swap="outerHTML"
		class="w-full"
	>
		<label class="form-control w-full max-w-xs">
			if i.Label != "" {
				<div class="label">
					<span class="label-text">{ i.Label }</span>
					if i.Optional {
						<span class="badge badge-info">Optional</span>
					}
				</div>
			}
			switch  {
				case i.Label != "":
					@i.withTextLabel()
				case i.Icon != nil:
					@i.withIconLabel()
				default:
					@i.show("w-full max-w-xs")
			}
			if i.Error != "" {
				<div class="label">
					<span class="label-text-alt text-error">
						@Icon("fa-circle-exclamation")
						{ i.Error }
					</span>
				</div>
			}
		</label>
	</div>
}
