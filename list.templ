package components

templ UnorderedList(options ...Option[list]) {
	{{ list := buildUnorderedList(options...) }}
	<ul
		{ list.Attributes()... }
	>
		for _, item := range list.items {
			<li>
				@item
			</li>
		}
	</ul>
}

templ OrderedList(options ...Option[list]) {
	{{ list := buildOrderedList(options...) }}
	<ol
		{ list.Attributes()... }
	>
		for _, item := range list.items {
			<li>
				@item
			</li>
		}
	</ol>
}
