package components

// Show will render the Card component.
templ (c Card) Show() {
	<div
		id={ c.ID }
		class={ c.Class(), "bg-base-100" }
		{ c.Attributes()... }
	>
		if c.Image != nil {
			<figure>
				@c.Image.Show()
			</figure>
		}
		<div class="card-body">
			if c.Title.Title != "" {
				@c.Title.Show()
			}
			if c.Body != nil {
				@c.Body
			}
			if c.Actions != nil {
				<div class="card-actions">
					for _, action := range c.Actions {
						@action
					}
				</div>
			}
			if c.Badges != nil {
				<div class="card-actions justify-right">
					for _, badge := range c.Badges {
						@badge.Show()
					}
				</div>
			}
		</div>
	</div>
}
