package components

func (s modifierShadow) setShadow() string {
	switch s.shadowSize {
	case XS:
		return "shadow-xs"
	case SM:
		return "shadow-sm"
	case MD:
		return "shadow-md"
	case LG:
		return "shadow-lg"
	case XL:
		return "shadow-xl"
	default:
		return ""
	}
}

// noop function so that templ generation doesn't report errors.
templ shadowNOOP() {
}
